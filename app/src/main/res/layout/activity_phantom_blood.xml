<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PhantomBloodActivity" android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="246dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/scrollView2"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"  android:layout_marginBottom="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/backPB" android:id="@+id/scrollView2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/seasonAboutTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:isScrollContainer="true"
                    android:textStyle="italic"
                    android:drawablePadding="10dp"
                    android:linksClickable="true"
                    android:fadingEdgeLength="25dp"
                    android:fadingEdge="vertical"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="outsideOverlay"
                    android:bufferType="spannable" android:layout_marginBottom="24dp"
                    app:layout_constraintTop_toTopOf="@+id/dio" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:text="Empty"/>
            <Button
                    android:text="Дио"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dio" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/backPB" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Джонатан"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jonathan" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/dio"/>
            <Button
                    android:text="Эрина Пендлетон"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/erina" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/jonathan"/>
            <Button
                    android:text="Роберт Э. О. Спидвагон"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spidwagon" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/erina"/>
            <Button
                    android:text="Уилл Антонио Цеппели"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/uill" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/spidwagon"/>
            <Button
                    android:text="Джордж Джостар"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/george" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/uill"/>
            <Button
                    android:text="Дарио Брандо"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dario" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/george"/>



        </LinearLayout>
    </ScrollView>

    <Button
            android:text="Назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backPB" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
            android:textSize="18sp" android:fontFamily="@font/muli_light" android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>