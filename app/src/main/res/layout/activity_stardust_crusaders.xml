<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StardustCrusadersActivity" android:background="@color/colorPrimary">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/scrollView2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/seasonAboutTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:isScrollContainer="true"
                    android:textStyle="italic"
                    android:drawablePadding="10dp"
                    android:linksClickable="true"
                    android:fadingEdgeLength="25dp"
                    android:fadingEdge="vertical"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="outsideOverlay"
                    android:bufferType="spannable" android:layout_marginBottom="24dp"
                    app:layout_constraintTop_toTopOf="@+id/jotaro" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:text="Empty"/>
            <Button
                    android:text="Джотаро Куджо"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jotaro" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/backSC" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Холли Куджо"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/holly" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/jotaro" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Мохаммед Абдул"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/abdul" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/holly" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Нориаки Какёин"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kakyoin" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/abdul" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Жан-Пьер Польнарефф"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/polnareff" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/kakyoin" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Игги"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iggi" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/polnareff" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Хол Хорс"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horse" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/iggi" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Джей Гейл"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/geil" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/horse" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Нена"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nena" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/geil" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Энья Гейл"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/enya" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/nena" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Пет Шоп"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/petshop" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/enya" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            <Button
                    android:text="Ванилла Айс"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vanilla" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/petshop" app:layout_constraintHorizontal_bias="0.0"
                    style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/muli_light" android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>

        </LinearLayout>
    </ScrollView>

    <Button
            android:text="Назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backSC" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimaryDark"
            android:textSize="18sp" android:fontFamily="@font/muli_light" android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="246dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="404dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>